<UserControl x:Class="Siglo21Desktop.Control.Recursos.RecursosUsuarioUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Siglo21Desktop.Control.Recursos"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <StackPanel Orientation="Vertical">
            
            
            <Button Width="150"  VerticalAlignment="Bottom"  Content="Guardar" Click="Guardar_Button_Click"/>

            <Button Width="150"  VerticalAlignment="Bottom"  Content="Actualizar" Click="Actualizar_Button_Click"/>

            <Button Width="150"  VerticalAlignment="Bottom"  Content="Borrar" Click="Borrar_Button_Click" />

            <Button Width="150"  VerticalAlignment="Bottom"  Content="Obtener" Click="Obtener_Button_Click"/>
        </StackPanel>


    </Grid>
</UserControl>